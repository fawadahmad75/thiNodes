<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tahir Heart Institute - <%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="container-fluid">
        <div class="row">
            <!-- Sidebar (if user is logged in) -->
            <% if (locals.user) { %>
                <div class="col-md-2 bg-light sidebar">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                                    <i class="fas fa-home"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'patients' ? 'active' : '' %>" href="/patients">
                                    <i class="fas fa-users"></i> Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'prescriptions' ? 'active' : '' %>" href="/prescriptions">
                                    <i class="fas fa-prescription"></i> Prescriptions
                                </a>
                            </li>
                            <% if (locals.user.role === 'admin' || locals.user.role === 'pharmacist') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'formulary' ? 'active' : '' %>" href="/formulary">
                                    <i class="fas fa-pills"></i> Formulary
                                </a>
                            </li>
                            <% } %>
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'test-results' ? 'active' : '' %>" href="/test-results">
                                    <i class="fas fa-vial"></i> Test Results
                                </a>
                            </li>
                            <% if (locals.user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link <%= active === 'settings' ? 'active' : '' %>" href="/settings">
                                    <i class="fas fa-cog"></i> Settings
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <div class="col-md-10">
            <% } else { %>
                <div class="col-12">
            <% } %>
                    <!-- Page Content -->
                    <%- body %>
                </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
</body>
</html>