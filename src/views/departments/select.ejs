<%- include('../layouts/main') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Select Department</h3>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <h5>Welcome, <%= user.name %></h5>
            <p class="text-muted">Please select a department to continue</p>
          </div>
          
          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% departments.forEach(function(dept) { %>
              <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= dept.name %></h5>
                    <p class="card-text flex-grow-1"><%= dept.description %></p>
                    <form action="/departments/select" method="POST" class="mt-3">
                      <input type="hidden" name="departmentId" value="<%= dept.id %>">
                      <button type="submit" class="btn btn-primary w-100">Select</button>
                    </form>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
        <div class="card-footer bg-light text-center">
          <small class="text-muted">
            You can change your department later from the dashboard
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
