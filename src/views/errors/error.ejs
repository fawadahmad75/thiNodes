<%- contentFor('body') %>

<div class="container text-center py-5">
    <h1 class="display-4 text-danger mb-3">Oops!</h1>
    <p class="lead text-gray-800 mb-3"><%= locals.message || 'Something went wrong!' %></p>

    <% if (process.env.NODE_ENV === 'development' && locals.stack) { %>
        <div class="card mt-4">
            <div class="card-header bg-danger text-white">
                Stack Trace
            </div>
            <div class="card-body">
                <pre class="text-start mb-0"><code><%= stack %></code></pre>
            </div>
        </div>
    <% } %>

    <div class="mt-4">
        <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i> Go Home
        </a>
    </div>
</div>